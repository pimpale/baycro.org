//- layout.pug
doctype html
html
  head
    meta(charset='UTF-8')

    title Baycro

    // CSS References
    link(rel='stylesheet' href='vendor/fonts-googleapis/exo.css')
    link(rel='stylesheet' href='vendor/fonts-googleapis/ubuntu.css')
    link(rel='stylesheet' href='vendor/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet' href='vendor/fontawesome-free/css/all.min.css')
    link(rel='stylesheet' href='vendor/fontawesome-free/css/fontawesome.min.css')
    link(rel='stylesheet' href='css/homepage.css')

    // JS Files
    script(src='main.bundle.js')

    script(src='vendor/jquery/jquery.js')
    script(src='vendor/jquery/jquery.slim.min.js')
    script(src='vendor/bootstrap/js/bootstrap.js')
    script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')
    script(src='vendor/jquery/jquery-hover-effect.js')
    script(src='vendor/jquery/jquery.ui.totop.js')
    script(src='js/homepage.js')

    // Extra scripts + stuff
    block extrascripts

    // Favicon
    link(rel='icon' href='img/baycro_logo.webp' type='image/webp')
  body
    header.header
        nav.navbar.navbar-expand-lg.fixed-top.py-3
          .container
            a.navbar-brand.font-weight-bold(href='index.html') Baycro
            button.navbar-toggler.navbar-toggler-right(type='button' data-toggle='collapse' data-target='#navbarSupportedContent')
              i.fa.fa-bars
            #navbarSupportedContent.collapse.navbar-collapse
              .navbar-nav.ml-auto
                a.nav-item.nav-link.font-weight-bold(href='news.html') News
                a.nav-item.nav-link.font-weight-bold(href='donate.html') Donate
                a.nav-item.nav-link.font-weight-bold(href='3d_printing.html') 3D Printing
                a.nav-item.nav-link.font-weight-bold(href='join.html') Join
                a.nav-item.nav-link.font-weight-bold(href='sponsors.html') Sponsors
                a.nav-item.nav-link.font-weight-bold(href='faq.html') FAQ
                a.nav-item.nav-link.font-weight-bold(href='about.html') About

    // This is where the good stuff goes
    .content
      block content

    footer.footer
      .container-fluid.py-1
        .footerlogo
          br
          p
            a.text-light(href='about.html') About
          p
            a.text-light(href='faq.html') Frequently Asked Questions
          p.text-light &copy; Govind Pimpale & Ganesh Pimpale
